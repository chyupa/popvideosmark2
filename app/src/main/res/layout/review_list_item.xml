<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/review_author_placeholder"
        android:paddingLeft="10dp"
        android:textSize="16sp"
        android:id="@+id/review_author_placeholder"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/review_author_name"
        android:layout_toEndOf="@+id/review_author_placeholder"
        android:textStyle="italic"
        android:paddingLeft="5dp"
        android:textSize="16sp"/>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:id="@+id/review_review_content"
        android:layout_below="@+id/review_author_placeholder"
        android:padding="10dp"
        />

</RelativeLayout>